<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopNavigationTextActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#468ccb</item>
    </style>

    <style name="TopNavigationTextInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="NavigationBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">#DAE8F5</item>
    </style>

    <style name="BottomNavigationTextActive">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#468ccb</item>
    </style>

    <style name="BottomNavigationTextInactive">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

